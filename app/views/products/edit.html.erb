<h1 align="center">Update Product</h1>
<form align="center" action="/products" method="POST" accept-charset="UTF-8" >
  <input name="_method" type="hidden" value="patch" />
  <input type="hidden" name="authenticity_token">
  <input type="hidden" name="backURL" value="<%=@backURL%>">
  <input type="hidden" name="id" id="product_id" value="<%=@product.id%>">
  <input type="hidden" name="created_at" id="product_created_at" value="<%=@product.created_at%>">
  <table align="center" style="font-size: 20px" cellpadding = "5">
    <tr>
      <td >Name:</td>
      <td>
        <input style="font-size: 15px" type="text" name="product[name]" id="product_name" value="<%=@product.name%>" size="50">
      </td>
    </tr>
    <tr>
      <td>Price: </td>
      <td>
        <input type="text" style="font-size: 15px" name="product[price]" id="product_price" value="<%=@product.price%>" size="50">
      </td>
    </tr>
    <tr>
      <td>Size:</td>
      <td>
        <input type="text" style="font-size: 15px" name="product[size]" id="product_size" value="<%=@product.size%>" size="50"> 
      </td>
    </tr>
    <tr>
      <td>Color:</td>
      <td>
        <input type="text" style="font-size: 15px" name="product[color]" id="product_color" value="<%=@product.color%>" size="50">
      </td>
    </tr>
    <tr>
      <td>Brand:</td>
      <td>
        <input type="text" style="font-size: 15px" name="product[brand]" id="product_brand" value="<%=@product.brand%>" size="50">
      </td>
    </tr>
    <tr>
      <td>Seller:</td>
      <td>
        <input type="text" style="font-size: 15px" name="product[seller]" id="product_seller" value="<%=@product.seller%>" size="50">
      </td>
    </tr>
    <tr>
      <td>Description:</td>
      <td>
        <input type="text" style="font-size: 15px" name="product[description]" id="product_description" value="<%=@product.description%>" size="50">
      </td>
    </tr>
  </table>
  <div>
    <button style="font-size: 20px;background-color:#ffff80">Update Product</button>
  </div>
</form>
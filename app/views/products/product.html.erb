<title>Details</title>
<br>
<form action="/">
    <button style="font-size: 20px;height:30px;width:100px;background-color:#4d79ff">Home</button>  
</form>
<h1 align="center">Product details</h1>
<table align="center" style="font-size: 20px" width = "50%" cellpadding = "10">
    <td>
        <div class="img">
		    <img src="/giay.jpg" width="200px" height="200px">
		</div>
    </td>
    <td>
        <table align="center" cellpadding = "5">
            <tr>
                <td >Name:</td>
                <td>
                <%=@product.name%>
                </td>
            </tr>
            <tr>
                <td>Price: </td>
                <td>
                <%=@product.price%>
                </td>
            </tr>
            <tr>
                <td>Size:</td>
                <td>
                <%=@product.size%>
                </td>
            </tr>
            <tr>
                <td>Color:</td>
                <td>
                <%=@product.color%>
                </td>
            </tr>
            <tr>
                <td>Brand:</td>
                <td>
                <%=@product.brand%>
                </td>
            </tr>
            <tr>
                <td>Seller:</td>
                <td>
                <%=@product.seller%>
                </td>
            </tr>
            <tr>
                <td>Description:</td>
                <td>
                <%=@product.description%>
                </td>
            </tr>
        </table>
    </td>
</table>
<table align="center">
                <div class="mua">
                    <td>
                        <form action="/products/edit" method="GET">
                            <input type="hidden" name="id" value=<%=@product.id%>>
                            <input type="hidden" name="backURL" value="/products?id=<%=@product.id%>">
                            <button style="height:30px;width:100px;background-color:#ffff80">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form action="/products" method="post" data-confirm="Are you sure?">
                            <input name="_method" type="hidden" value="delete" />
                            <input type="hidden" name="authenticity_token"> 
                            <input type="hidden" name="id" value=<%=@product.id%>>
                            <button style="height:30px;width:100px;background-color:#ff704d">Delete</button>
                        </form>
                    </td>
                </div>
            </table>
<%@product.comments.each do |comment|%>
    <span><img src="/avt.jpg" width="40px"height="40px">
    <span style="font-size: 20px"><b><%=comment.commenter%>:</b>
    <span style="font-size: 15px"><i>(<%=comment.created_at%>)</i>
    <p style="font-size: 20px"><i><%=comment.body%></i>
    <form action="/products/comments" method="post" data-confirm="Are you sure?">
        <input name="_method" type="hidden" value="delete" />
        <input type="hidden" name="authenticity_token">
        <input type="hidden" name="product_id" value="<%=@product.id%>">
        <input type="hidden" name="id" value="<%=comment.id%>">
        <button style="font-size: 14px;background-color:#ff704d">Delete</button>
    </form>
    <br>
<%end%>

<h2>Add comment</h2>
<form action="/products/comments" method="post" style="font-size: 20px">
    <input type="hidden" name="authenticity_token"> 
    <input type="hidden" name="id" value="<%=@product.id%>">
    <label for="price">Your name</label><br>
    <input type="text" name="comment[commenter]" id="commenter"><br>
    <label for="price">Your comment</label><br>
    <input type="text" name="comment[body]" id="body">
    <button style="font-size: 14px;background-color:#8cff66">Post</button> 
</form>

